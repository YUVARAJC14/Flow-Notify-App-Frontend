<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <View
            android:id="@+id/priority_bar"
            android:layout_width="4dp"
            android:layout_height="0dp"
            android:layout_alignTop="@+id/task_title"
            android:layout_alignBottom="@+id/task_time"
            android:layout_alignParentStart="true"
            android:background="@color/red" />

        <TextView
            android:id="@+id/task_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@id/priority_bar"
            android:textColor="@color/black"
            android:textSize="16sp"
            tools:text="Team Meeting" />

        <TextView
            android:id="@+id/task_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/task_title"
            android:layout_alignStart="@id/task_title"
            android:textColor="@color/gray"
            android:textSize="14sp"
            tools:text="10:00 AM" />

        <View
            android:id="@+id/priority_dot"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/circle_background_red" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
