<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/category_indicator"
            android:layout_width="4dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:background="@color/blue" />

        <TextView
            android:id="@+id/event_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/category_indicator"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Design Sprint Kickoff" />

        <ImageView
            android:id="@+id/time_icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_clock"
            app:tint="@color/gray"
            app:layout_constraintTop_toBottomOf="@id/event_title"
            app:layout_constraintStart_toStartOf="@id/event_title" />

        <TextView
            android:id="@+id/event_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="@color/gray"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="@id/time_icon"
            app:layout_constraintBottom_toBottomOf="@id/time_icon"
            app:layout_constraintStart_toEndOf="@id/time_icon"
            tools:text="10:00 AM - 11:00 AM" />

        <ImageView
            android:id="@+id/location_icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_location"
            app:tint="@color/gray"
            app:layout_constraintTop_toBottomOf="@id/time_icon"
            app:layout_constraintStart_toStartOf="@id/time_icon" />

        <TextView
            android:id="@+id/event_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="@color/gray"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="@id/location_icon"
            app:layout_constraintBottom_toBottomOf="@id/location_icon"
            app:layout_constraintStart_toEndOf="@id/location_icon"
            tools:text="Virtual / Zoom" />

        <TextView
            android:id="@+id/event_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:textSize="12sp"
            android:textColor="@color/blue"
            android:background="@drawable/bg_category_work"
            app:layout_constraintTop_toBottomOf="@id/location_icon"
            app:layout_constraintStart_toStartOf="@id/location_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="Work" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
